@model RegisterUser

 <div asp-validation-summary="All" class="text-danger"></div>
<form method="POST" asp-action="Register">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create new Account</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="FirstName" class="form-control"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="LastName" class="form-control"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-control"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="UserName" class="form-control"></label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password" class="form-control"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary " style="width:150px">Register</button>
        <a asp-controller="User" asp-action="RegisterBusiness" class="btn btn-secondary" style="">Register as a Business</a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }

