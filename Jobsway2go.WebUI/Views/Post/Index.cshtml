@model IEnumerable<Post>
@{
    ViewData["Title"] = "Index";
}

<div style="margin:40px;">
    <h1> Posts Manager</h1>
    <p>
        <a asp-controller="Post" asp-action="Create" class="btn btn-primary">Create Posts</a>
    </p>
  
    <table class="table table-hover table-bordered" width="100%">
        <thead>
            <tr class="table">
                <th>Post Title</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Title </td>
                    <td>@obj.Description </td>
                    <td>@obj.CreatedAtUTC </td>
                    <td>@obj.CreatedByUserId </td>
                    <td>@obj.Type </td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-controller="Post" asp-action="Update" asp-route-id="@obj.Id">Edit</a>
                        <a class="btn btn-info btn-sm" asp-controller="Post" asp-action="Details" asp-route-id="@obj.Id">Details</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Post" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>