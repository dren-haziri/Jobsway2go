@*@using Jobsway2go.WebUI.Models.JobModel  
@model JobModel*@

<h1>Job</h1>

<div>
    <a style="width: max-content" asp-action="Create" class="btn btn-outline-success">Create New
    </a>
</div>

<p>
@using (Html.BeginForm("Job", "Job", FormMethod.Get))
{
    @Html.TextBox("search") <input type="submit" value="Search" class="btn btn-primary"/>
}

</p>


<div>
  <div class="row">
        @if(Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <div class="col d-flex justify-content-center">
                <div class="card" style="width: 19rem;">
                    <div class="card-body">
                        <img src="@item.Image" class="card-img-top" alt="...">

                        <p class="card-text"> @item.CompanyName</p>
                        <p class="card-text"> @item.Location</p>
                        <p class="card-text"> @item.Schedule</p>
                        <p class="card-text"> @item.Description</p>
                        <p class="card-text"> @item.OpenSpots</p>
                        <p class="card-text"> @item.Requirements</p>
                        <p class="card-text"> @item.DateFrom</p>
                        <p class="card-text"> @item.DateTo</p>
                        <p class="card-text"> @item.Payment</p>

                        <div class="d-flex buttons justify-content-around">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-dark">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
            }
        }
        else
        {
            <h3 class="text-center text-danger font-italic">No products to show!</h3> 
        }
    </div>
</div>