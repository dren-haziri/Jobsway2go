@model SignInUser



<h1>Sign In</h1>

<form method="POST" asp-action="SignIn">
    <div class="mb-3">
        <label asp-for="Username" class="form-control"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-control"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary " style="width:150px">Sign In</button>
</form>